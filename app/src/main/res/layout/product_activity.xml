<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingTop="@dimen/product_padding"
    android:paddingBottom="@dimen/product_padding"
    android:gravity="center_horizontal"
    >

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:gravity="center_horizontal"
        android:paddingBottom="@dimen/medium_layout_padding"
        >

        <TextView
            android:id="@+id/product_name_textview"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Product Name"
            android:padding="@dimen/small_textview_padding"
            />

        <TextView
            android:id="@+id/brand_name_textview"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Brand Name"
            android:padding="@dimen/small_textview_padding"
            />

        <TextView
            android:id="@+id/size_description_textview"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Size Description"
            android:padding="@dimen/small_textview_padding"
            />

        <TextView
            android:id="@+id/ounces_count_textview"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Ounces Or Count"
            android:padding="@dimen/small_textview_padding"
            />

    </LinearLayout>

    <Button
        android:id="@+id/add_button"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/add_button_text"
        />

    <Button
        android:id="@+id/contribute_button"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/contribute_button_text"
        />

</LinearLayout>
