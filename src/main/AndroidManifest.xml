<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
      package="com.wheretoshop"
      android:versionCode="1"
      android:versionName="1.0"
	  >

	<uses-sdk android:minSdkVersion="7" android:targetSdkVersion="21"/>
	<uses-permission android:name="android.permission.INTERNET" />

    <application android:label="@string/app_name" android:icon="@drawable/ic_launcher" android:theme="@style/Theme.AppCompat.Light">
        <activity android:name=".controller.HomeActivity"
                  android:label="@string/app_name"
				  >
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />
                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity android:name=".controller.grocerylist.GroceryListActivity">
            <meta-data android:name="android.app.default_searchable"
                android:value=".controller.ProductSearchActivity"
                />
        </activity>
        <activity
            android:name=".controller.ProductSearchActivity"
            android:launchMode="singleTop"
            >
            <intent-filter>
                <action android:name="android.intent.action.SEARCH" />
            </intent-filter>
            <meta-data android:name="android.app.searchable"
                android:resource="@xml/searchable"
                />
        </activity>
        <activity android:name=".controller.ViewProductActivity" />
    </application>
</manifest>
